pipeline {
    agent any
    stages {
        stage('NPM build and Install') {
            steps {
                 sh 'npm install'
                 sh 'npm run build'
            }
        }
        stage('Docker Build') {
            steps {
                 sh 'docker build -t angular-test .'
            }
        }
         stage('Docker Run') {
            steps {
               docker run --name angular-test -d -p 8080:80 angular-test
            }
        }
    }
}
